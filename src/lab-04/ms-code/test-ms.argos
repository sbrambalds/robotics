<?xml version="1.0" ?>
 
<argos-configuration>
 
  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0"
                ticks_per_second="10" />
  </framework>
 
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <lua_controller id="lua">
      <actuators>
        <differential_steering implementation="default" noise_level="0.00"/>
				<leds implementation="default" medium="leds" />
      </actuators>
      <sensors>
        <footbot_proximity implementation="default" noise_level="0.01" show_rays="true" />
        <footbot_light implementation="rot_z_only" noise_level="0.01" show_rays="true"/>
        <footbot_motor_ground implementation="rot_z_only" noise_level="0.01" />
        <differential_steering implementation="default" noise_level="0.0"/>
				<positioning implementation="default" noise_level="0.0" />
      </sensors>
     <params script="controller-ms.lua" />
   </lua_controller>

    
    </controllers>
 

  <!-- *********************** -->
